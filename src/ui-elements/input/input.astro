---
import { cls } from "@/src/lib/utils";
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'input'> {
    class?: string;
}

const { class: className, type, ...rest } = Astro.props;

---

<input 
    type={type}
    class={cls(
        
        `outline-none prose-input:bg-transparent border px-4 py-1 focus:border-ring/60 w-full bg-muted rounded-[0.6rem] transition-all duration-200
        shadow-ring/20 focus:shadow-md focus:shadow-ring/10 disabled:opacity-70 disabled:cursor-not-allowed`,

        type === 'file' && 
        `cursor-pointer text-sm text-muted-foreground
        file:mr-4 file:py-1 file:px-4 file:rounded-[0.3rem] file:border-0
        file:text-sm file:font-semibold file:bg-primary file:text-primary-foreground
        file:hover:bg-primary/90 file:cursor-pointer file:transition-colors`,
        
        className
    )} 
    {...rest} 
/>