{
  "name": "hybrid-astro-ui",
  "version": "0.0.15",
  "description": "Hybrid-Astro-UI using a hybrid model: zero-JS Astro + progressive enhancement with web components.",
  "bin": {
    "hybrid-astro-ui": "dist/cli.mjs",
    "hybrid-astro-ui-mcp": "dist/mcp.mjs"
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "pnpm run build && pnpm link",
    "watch": "tsup --watch",
    "format": "prettier --write \"**/*.{js,ts,astro}\"",
    "check": "prettier --check \"**/*.{js,ts,astro}\"",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:v": "vitest --reporter verbose",
    "push": "git add . && gitzen commit -y && git push && pnpm run build:dev",
    "publish": "npm publish --access public",
    "build:registry": "npx tsx scripts/buildJSONComponent.ts"
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "prettier --write"
    ]
  },
  "lint-staged:options": {
    "allowEmpty": true
  },
  "keywords": [
    "cli",
    "astro-components",
    "astro-ui",
    "astro"
  ],
  "author": "JorgeRosbel",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeRosbel/hybrid-astro-ui"
  },
  "bugs": {
    "url": "https://github.com/JorgeRosbel/hybrid-astro-ui/issues"
  },
  "homepage": "https://github.com/JorgeRosbel/hybrid-astro-ui#readme",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.15",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "figlet": "^1.8.2",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.7.0",
    "ora": "^9.0.0",
    "zod": "^4.1.13"
  }
}
