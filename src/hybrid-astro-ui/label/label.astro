---
import { cls } from '@/src/lib/utils';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'label'> {
  class?: string;
}

const { class: className, ...rest } = Astro.props as Props;
---

<label
  data-slot="label"
  class={cls(
    `
cursor-pointer text-sm not-prose select-none leading-none font-medium 
transition-opacity duration-200 
[:has(+_input:disabled)]:opacity-50 [:has(+_input:disabled)]:cursor-not-allowed 
`,
    className
  )}
  {...rest}
>
  <slot />
</label>
