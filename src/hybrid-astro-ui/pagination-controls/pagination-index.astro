---
import { cls } from '@/src/lib/utils';

interface Props {
  class?: string;
  path: string;
  label: number | string;
  active?: boolean;
}

const { class: className, path, label, active } = Astro.props as Props;
---

<a
  class={cls(
    'h-8 w-8 md:h-10 md:w-10 flex items-center justify-center rounded  border transition-colors bg-background  shadow hover:bg-primary/20 duration-200',
    active && 'bg-primary text-white hover:bg-primary',
    className
  )}
  href={path}
>
  {label}
</a>
