{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/commands/*": ["src/cli/commands/*"],
      "@/utils/*": ["src/cli/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "types": ["vitest/globals"]
}
