---
import { type Page } from 'astro';
import { cls } from '@/src/lib/utils';

interface Props {
  paginationInfo: Page;
  pageSize: number;
  containerClass?: string;
  buttonsClass?: string;
  variant?: 'default' | 'secondary' | 'outline' | 'ghost' | 'link' | 'destructive';
}

const {
  paginationInfo,
  pageSize = 10,
  containerClass,
  buttonsClass,
  variant = 'default',
} = Astro.props as Props;

const mergedClass = cls(
  'inline-flex w-max cursor-pointer disabled:opacity-30 items-center justify-center gap-2 whitespace-nowrap rounded-lg font-medium transition-colors',
  'focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 aria-invalid:border-destructive aria-invalid:border aria-invalid:bg-destructive/20 aria-invalid:text-destructive',
  'disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 px-4 py-1',

  variant === 'default' && 'bg-primary text-white shadow hover:bg-primary/90',
  variant === 'secondary' &&
    'bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80',
  variant === 'outline' &&
    'border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground',
  variant === 'ghost' && 'hover:bg-accent hover:text-accent-foreground',
  variant === 'link' && 'text-primary underline-offset-4 hover:underline',
  variant === 'destructive' && 'bg-destructive text-destructive-foreground',

  buttonsClass
);
---

<nav
  class={cls('flex items-center justify-between gap-4 mt-8 not-prose w-full py-2', containerClass)}
  aria-label="Paination"
>
  {
    paginationInfo.url.prev && paginationInfo.total >= pageSize ? (
      <a href={paginationInfo.url.prev} class={mergedClass}>
        Prev
      </a>
    ) : (
      <button disabled class={mergedClass}>
        Prev
      </button>
    )
  }

  {
    paginationInfo.total >= pageSize && (
      <div>
        <span class="font-medium w-full">
          {paginationInfo.currentPage} / {paginationInfo.lastPage}
        </span>
      </div>
    )
  }

  {
    paginationInfo.url.next && paginationInfo.data.length === pageSize ? (
      <a href={paginationInfo.url.next} class={mergedClass}>
        Next
      </a>
    ) : (
      <button disabled class={mergedClass}>
        Next
      </button>
    )
  }
</nav>
